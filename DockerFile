# ==========
# STAGE 1: Builder
# ==========
FROM node:22.12.0 AS builder

WORKDIR /usr/src/app

# Copiar package.json y lock para instalación rápida
COPY package*.json ./

# Instalar dependencias (sin devDeps si NODE_ENV=production)
RUN npm ci --omit=dev

# Copiar el resto del proyecto
COPY . .

# ==========
# STAGE 2: Runtime
# ==========
FROM node:22.12.0-slim

WORKDIR /usr/src/app

# Copiar solo los archivos necesarios desde el builder
COPY --from=builder /usr/src/app ./

# Exponer el puerto del servidor Express
EXPOSE 12001

# Establecer variables de entorno por defecto
ENV NODE_ENV=production
ENV PORT=3000

# Ejecutar la app
CMD ["npm", "start"]
